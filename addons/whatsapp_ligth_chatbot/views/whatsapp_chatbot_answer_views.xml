<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- WhatsApp Chatbot Answer Tree View -->
        <record id="view_whatsapp_chatbot_answer_tree" model="ir.ui.view">
            <field name="name">whatsapp.chatbot.answer.tree</field>
            <field name="model">whatsapp.chatbot.answer</field>
            <field name="arch" type="xml">
                <tree string="Chatbot Answers">
                    <field name="display_name"/>
                    <field name="step_id"/>
                    <field name="trigger_step_id"/>
                    <field name="value"/>
                    <field name="operator"/>
                    <field name="sequence"/>
                </tree>
            </field>
        </record>

        <!-- WhatsApp Chatbot Answer Form View -->
        <record id="view_whatsapp_chatbot_answer_form" model="ir.ui.view">
            <field name="name">whatsapp.chatbot.answer.form</field>
            <field name="model">whatsapp.chatbot.answer</field>
            <field name="arch" type="xml">
                <form string="Chatbot Answer">
                    <sheet>
                        <group>
                            <group>
                                <field name="step_id"/>
                                <field name="trigger_step_id" readonly="1"/>
                                <field name="chatbot_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="value"/>
                                <field name="operator"/>
                                <field name="sequence"/>
                                <field name="answer_data_type" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
