<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- WhatsApp Chatbot Trigger List View -->
        <record id="view_whatsapp_chatbot_trigger_tree" model="ir.ui.view">
            <field name="name">whatsapp.chatbot.trigger.tree</field>
            <field name="model">whatsapp.chatbot.trigger</field>
            <field name="arch" type="xml">
                <list string="Chatbot Triggers">
                    <field name="name"/>
                    <field name="chatbot_id"/>
                </tree>
            </field>
        </record>

        <!-- WhatsApp Chatbot Trigger Form View -->
        <record id="view_whatsapp_chatbot_trigger_form" model="ir.ui.view">
            <field name="name">whatsapp.chatbot.trigger.form</field>
            <field name="model">whatsapp.chatbot.trigger</field>
            <field name="arch" type="xml">
                <form string="Chatbot Trigger">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="chatbot_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
