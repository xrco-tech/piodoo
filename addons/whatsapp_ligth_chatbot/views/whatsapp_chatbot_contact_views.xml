<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- WhatsApp Chatbot Contact Search View -->
        <record id="view_whatsapp_chatbot_contact_search" model="ir.ui.view">
            <field name="name">whatsapp.chatbot.contact.search</field>
            <field name="model">whatsapp.chatbot.contact</field>
            <field name="arch" type="xml">
                <search string="Search Contacts">
                    <field name="name"/>
                    <field name="mobile_number"/>
                    <field name="last_chatbot_id"/>
                </search>
            </field>
        </record>

        <!-- WhatsApp Chatbot Contact List View -->
        <record id="view_whatsapp_chatbot_contact_tree" model="ir.ui.view">
            <field name="name">whatsapp.chatbot.contact.tree</field>
            <field name="model">whatsapp.chatbot.contact</field>
            <field name="arch" type="xml">
                <list string="Chatbot Contacts">
                    <field name="name"/>
                    <field name="mobile_number"/>
                    <field name="last_chatbot_id"/>
                    <field name="last_step_id"/>
                    <field name="last_seen_date" widget="datetime"/>
                    <field name="active_agent"/>
                </list>
            </field>
        </record>

        <!-- WhatsApp Chatbot Contact Form View -->
        <record id="view_whatsapp_chatbot_contact_form" model="ir.ui.view">
            <field name="name">whatsapp.chatbot.contact.form</field>
            <field name="model">whatsapp.chatbot.contact</field>
            <field name="arch" type="xml">
                <form string="Chatbot Contact">
                    <sheet>
                        <group>
                            <group>
                                <field name="partner_id"/>
                                <field name="name" readonly="1"/>
                                <field name="mobile_number" readonly="1"/>
                            </group>
                            <group>
                                <field name="last_chatbot_id"/>
                                <field name="last_step_id"/>
                                <field name="last_seen_date"/>
                                <field name="active_agent"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Messages" name="messages">
                                <field name="message_ids" nolabel="1">
                                    <tree default_order="create_date desc">
                                        <field name="type" widget="badge" decoration-info="type == 'incoming'" decoration-success="type == 'outgoing'"/>
                                        <field name="message_html" widget="html"/>
                                        <field name="step_id"/>
                                        <field name="create_date" widget="datetime"/>
                                    </tree>
                                </field>
                            </page>
                            
                            <page string="Variables" name="variables">
                                <field name="variable_value_ids" nolabel="1">
                                    <tree>
                                        <field name="variable_id"/>
                                        <field name="variable_type"/>
                                        <field name="value"/>
                                        <field name="value_text" invisible="variable_type != 'text'"/>
                                        <field name="value_integer" invisible="variable_type != 'integer'"/>
                                        <field name="value_date" invisible="variable_type != 'date'"/>
                                        <field name="value_boolean" invisible="variable_type != 'boolean'"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- WhatsApp Chatbot Contact Action -->
        <record id="action_whatsapp_chatbot_contact" model="ir.actions.act_window">
            <field name="name">Chatbot Contacts</field>
            <field name="res_model">whatsapp.chatbot.contact</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="view_whatsapp_chatbot_contact_search"/>
        </record>
    </data>
</odoo>
