<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- WhatsApp Message Preview Template (Outgoing/Sent) -->
        <template id="whatsapp_message_preview" t-name="WhatsApp Message Preview">
            <div class="o_whatsapp_preview overflow-hidden ps-3 pe-5">
                <div class="o_whatsapp_message mt-2 mb-1 fs-6 lh-1 float-start text-break text-black position-relative" style="background-color: #ffffff;">
                    <div class="o_whatsapp_message_core p-2 position-relative">
                        <!-- Header for media types -->
                        <div class="o_whatsapp_message_header bg-opacity-50" 
                             t-if="message_type in ['image', 'video', 'document', 'audio', 'location']">
                            <div t-attf-class="d-block bg-400 p-4 text-center {{ 'rounded-top-2' if message_type == 'location' else 'rounded-2' }}">
                                <t t-if="message_type == 'image'">
                                    <i class="fa fa-image fs-1 text-600"/>
                                </t>
                                <t t-elif="message_type == 'video'">
                                    <i class="fa fa-video-camera fs-1 text-600"/>
                                </t>
                                <t t-elif="message_type == 'document'">
                                    <i class="fa fa-file fs-1 text-600"/>
                                </t>
                                <t t-elif="message_type == 'audio'">
                                    <i class="fa fa-volume-up fs-1 text-600"/>
                                </t>
                                <t t-elif="message_type == 'location'">
                                    <i class="fa fa-map-marker fs-1 text-600"/>
                                </t>
                            </div>
                            <div t-if="message_type == 'location'" class="o_whatsapp_location_footer d-flex p-2 bg-200 rounded-bottom-2 flex-column">
                                <span class="o-whatsapp-font-11" t-out="location_name or 'Location'"/>
                                <t t-if="location_address">
                                    <br/>
                                    <span class="text-600 o-whatsapp-font-9" t-out="location_address"/>
                                </t>
                            </div>
                        </div>
                        
                        <!-- Message Body -->
                        <div class="o_whatsapp_message_body px-1 mt-2" 
                             t-attf-style="white-space: normal; word-wrap: break-word; max-width: 100%;">
                            <t t-if="message_body">
                                <t t-out="message_body"/>
                            </t>
                            <t t-elif="message_type == 'document'">
                                <i class="fa fa-file"/> <t t-out="document_filename or 'Document'"/>
                            </t>
                            <t t-elif="message_type == 'audio'">
                                <i class="fa fa-volume-up"/> <t t-out="'Voice Message' if audio_voice else 'Audio'"/>
                            </t>
                            <t t-elif="message_type == 'location' and not location_name">
                                <i class="fa fa-map-marker"/> Location
                            </t>
                            <t t-elif="message_type == 'contacts'">
                                <i class="fa fa-address-book"/> Contact
                            </t>
                            <t t-elif="message_type == 'interactive'">
                                <i class="fa fa-mouse-pointer"/> Interactive Message
                            </t>
                            <t t-elif="message_type == 'template'">
                                <i class="fa fa-file-text"/> Template: <t t-out="template_name or 'Unknown'"/>
                            </t>
                            <t t-elif="message_type == 'sticker'">
                                <i class="fa fa-smile-o"/> Sticker
                            </t>
                            <t t-elif="message_type == 'reaction'">
                                <t t-out="reaction_emoji or 'Reaction'"/>
                            </t>
                        </div>
                        
                        <!-- Caption for images/videos (shown below media) -->
                        <div t-if="caption and message_type in ['image', 'video']" 
                             class="o_whatsapp_message_body px-1 mt-2" 
                             t-attf-style="white-space: normal; word-wrap: break-word; max-width: 100%;">
                            <t t-out="caption"/>
                        </div>
                        
                        <!-- Timestamp -->
                        <span class="position-absolute bottom-0 end-0 o-whatsapp-font-11 py-1 px-2 text-black-50" area-hidden="true">
                            <t t-out="message_timestamp or ''"/>
                        </span>
                    </div>
                </div>
            </div>
        </template>

        <!-- WhatsApp Message Preview Template (Received/Incoming) -->
        <template id="whatsapp_message_preview_received" t-name="WhatsApp Message Preview Received">
            <div class="o_whatsapp_preview overflow-hidden ps-5 pe-3">
                <div class="o_whatsapp_message sent mt-2 mb-1 fs-6 lh-1 float-end text-break text-white position-relative" style="background-color: #075E54; min-width: 100px;">
                    <div class="o_whatsapp_message_core p-2 position-relative">
                        <!-- Header for media types -->
                        <div class="o_whatsapp_message_header bg-opacity-50" 
                             t-if="message_type in ['image', 'video', 'document', 'audio', 'location']">
                            <div t-attf-class="d-block bg-400 p-4 text-center {{ 'rounded-top-2' if message_type == 'location' else 'rounded-2' }}">
                                <t t-if="message_type == 'image'">
                                    <i class="fa fa-image fs-1 text-600"/>
                                </t>
                                <t t-elif="message_type == 'video'">
                                    <i class="fa fa-video-camera fs-1 text-600"/>
                                </t>
                                <t t-elif="message_type == 'document'">
                                    <i class="fa fa-file fs-1 text-600"/>
                                </t>
                                <t t-elif="message_type == 'audio'">
                                    <i class="fa fa-volume-up fs-1 text-600"/>
                                </t>
                                <t t-elif="message_type == 'location'">
                                    <i class="fa fa-map-marker fs-1 text-600"/>
                                </t>
                            </div>
                            <div t-if="message_type == 'location'" class="o_whatsapp_location_footer d-flex p-2 bg-200 rounded-bottom-2 flex-column">
                                <span class="o-whatsapp-font-11" t-out="location_name or 'Location'"/>
                                <t t-if="location_address">
                                    <br/>
                                    <span class="text-600 o-whatsapp-font-9" t-out="location_address"/>
                                </t>
                            </div>
                        </div>
                        
                        <!-- Message Body -->
                        <div class="o_whatsapp_message_body px-1 mt-2" 
                             t-attf-style="white-space: normal; word-wrap: break-word; max-width: 100%;">
                            <t t-if="message_body">
                                <t t-out="message_body"/>
                            </t>
                            <t t-elif="message_type == 'document'">
                                <i class="fa fa-file"/> <t t-out="document_filename or 'Document'"/>
                            </t>
                            <t t-elif="message_type == 'audio'">
                                <i class="fa fa-volume-up"/> <t t-out="'Voice Message' if audio_voice else 'Audio'"/>
                            </t>
                            <t t-elif="message_type == 'location' and not location_name">
                                <i class="fa fa-map-marker"/> Location
                            </t>
                            <t t-elif="message_type == 'contacts'">
                                <i class="fa fa-address-book"/> Contact
                            </t>
                            <t t-elif="message_type == 'interactive'">
                                <i class="fa fa-mouse-pointer"/> Interactive Message
                            </t>
                            <t t-elif="message_type == 'template'">
                                <i class="fa fa-file-text"/> Template: <t t-out="template_name or 'Unknown'"/>
                            </t>
                            <t t-elif="message_type == 'sticker'">
                                <i class="fa fa-smile-o"/> Sticker
                            </t>
                            <t t-elif="message_type == 'reaction'">
                                <t t-out="reaction_emoji or 'Reaction'"/>
                            </t>
                        </div>
                        
                        <!-- Caption for images/videos (shown below media) -->
                        <div t-if="caption and message_type in ['image', 'video']" 
                             class="o_whatsapp_message_body px-1 mt-2" 
                             t-attf-style="white-space: normal; word-wrap: break-word; max-width: 100%;">
                            <t t-out="caption"/>
                        </div>
                        
                        <!-- Timestamp -->
                        <span class="position-absolute bottom-0 end-0 o-whatsapp-font-11 py-1 px-2 text-white-50" area-hidden="true">
                            <t t-out="message_timestamp or ''"/>
                        </span>
                    </div>
                </div>
            </div>
        </template>

        
        <!-- WhatsApp Messages Search View -->
        <record id="view_whatsapp_message_search" model="ir.ui.view">
            <field name="name">whatsapp.message.search</field>
            <field name="model">whatsapp.message</field>
            <field name="arch" type="xml">
                <search string="Search WhatsApp Messages">
                    <field name="contact_name" string="Contact"/>
                    <field name="phone_number" string="Phone"/>
                    <field name="message_body" string="Message"/>
                    <field name="message_id" string="Message ID"/>
                    <field name="wa_id" string="WhatsApp ID"/>
                    <separator/>
                    <filter string="Received" name="received" domain="[('status', '=', 'received')]"/>
                    <filter string="Processed" name="processed" domain="[('status', '=', 'processed')]"/>
                    <filter string="Replied" name="replied" domain="[('status', '=', 'replied')]"/>
                    <filter string="Error" name="error" domain="[('status', '=', 'error')]"/>
                    <separator/>
                    <filter string="Incoming" name="incoming" domain="[('is_incoming', '=', True)]"/>
                    <filter string="Outgoing" name="outgoing" domain="[('is_incoming', '=', False)]"/>
                    <separator/>
                    <filter string="Text" name="text" domain="[('message_type', '=', 'text')]"/>
                    <filter string="Image" name="image" domain="[('message_type', '=', 'image')]"/>
                    <filter string="Video" name="video" domain="[('message_type', '=', 'video')]"/>
                    <filter string="Document" name="document" domain="[('message_type', '=', 'document')]"/>
                    <filter string="Audio" name="audio" domain="[('message_type', '=', 'audio')]"/>
                    <filter string="Location" name="location" domain="[('message_type', '=', 'location')]"/>
                    <separator/>
                    <filter string="Read" name="read" domain="[('message_status', '=', 'read')]"/>
                    <filter string="Delivered" name="delivered" domain="[('message_status', '=', 'delivered')]"/>
                    <filter string="Failed" name="failed" domain="[('message_status', '=', 'failed')]"/>
                    <filter string="Has Quote" name="has_quote" domain="[('has_context', '=', True)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Status" name="group_status" context="{'group_by': 'status'}"/>
                        <filter string="Message Type" name="group_type" context="{'group_by': 'message_type'}"/>
                        <filter string="Contact" name="group_contact" context="{'group_by': 'contact_name'}"/>
                        <filter string="Date" name="group_date" context="{'group_by': 'message_timestamp:day'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- WhatsApp Messages Action -->
        <record id="action_whatsapp_message" model="ir.actions.act_window">
            <field name="name">WhatsApp Messages</field>
            <field name="res_model">whatsapp.message</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="view_whatsapp_message_search"/>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No WhatsApp messages yet!
                </p>
                <p>
                    Messages will appear here when users send messages to your WhatsApp number.
                </p>
            </field>
        </record>

        <!-- WhatsApp Messages List View -->
        <record id="view_whatsapp_message_tree" model="ir.ui.view">
            <field name="name">whatsapp.message.list</field>
            <field name="model">whatsapp.message</field>
            <field name="arch" type="xml">
                <list string="WhatsApp Messages" decoration-info="status == 'received'" 
                      decoration-success="status == 'processed'" 
                      decoration-warning="status == 'replied'"
                      decoration-danger="status == 'error'">
                    <field name="message_timestamp" widget="datetime"/>
                    <field name="contact_name"/>
                    <field name="phone_number"/>
                    <field name="message_type" widget="badge"/>
                    <field name="message_preview_html" widget="html" optional="show" string="Preview"/>
                    <field name="message_body" widget="text" optional="hide"/>
                    <field name="status" widget="badge" decoration-info="status == 'received'" 
                           decoration-success="status == 'processed'" 
                           decoration-warning="status == 'replied'"
                           decoration-danger="status == 'error'"/>
                    <field name="message_status" widget="badge" optional="hide"
                           decoration-success="message_status == 'read'"
                           decoration-info="message_status == 'delivered'"
                           decoration-warning="message_status == 'sent'"
                           decoration-danger="message_status == 'failed'"/>
                    <field name="is_incoming" widget="boolean_toggle" optional="hide"/>
                </list>
            </field>
        </record>

        <!-- WhatsApp Messages Form View -->
        <record id="view_whatsapp_message_form" model="ir.ui.view">
            <field name="name">whatsapp.message.form</field>
            <field name="model">whatsapp.message</field>
            <field name="arch" type="xml">
                <form string="WhatsApp Message">
                    <header>
                        <field name="status" widget="statusbar" statusbar_visible="received,processed,replied"/>
                        <button name="action_send_reply" string="Send Reply" type="object" 
                                class="oe_highlight" icon="fa-reply" 
                                invisible="is_incoming == False"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="%(action_whatsapp_message)d" type="action" 
                                    class="oe_stat_button" icon="fa-arrow-left" string="Back to Messages"/>
                        </div>
                        <group>
                            <group>
                                <field name="contact_name"/>
                                <field name="phone_number"/>
                                <field name="wa_id"/>
                                <field name="message_type"/>
                            </group>
                            <group>
                                <field name="message_timestamp"/>
                                <field name="timestamp_unix"/>
                                <field name="status"/>
                                <field name="is_incoming"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Message Preview" name="preview">
                                <group>
                                    <field name="message_preview_html" widget="html" nolabel="1"/>
                                </group>
                            </page>
                            
                            <page string="Message Content" name="content">
                                <group>
                                    <field name="message_body" widget="text" nolabel="1" placeholder="Message content will appear here..."/>
                                </group>
                                <group invisible="message_type != 'text'">
                                    <field name="text_preview_url" invisible="message_type != 'text'"/>
                                </group>
                            </page>
                            
                            <page string="Media" name="media" invisible="message_type not in ['image', 'video', 'audio', 'document', 'sticker']">
                                <group>
                                    <group string="Media Information">
                                        <field name="media_id"/>
                                        <field name="media_url" widget="url"/>
                                        <field name="media_mime_type"/>
                                        <field name="media_size"/>
                                        <field name="media_sha256"/>
                                    </group>
                                    <group string="Downloaded Attachment" invisible="not media_attachment_id">
                                        <field name="media_attachment_id" widget="many2one" 
                                               options="{'no_create': True, 'no_create_edit': True}"/>
                                    </group>
                                    <group string="Media Details" invisible="message_type not in ['image', 'video']">
                                        <field name="caption" widget="text"/>
                                        <field name="image_width" invisible="message_type != 'image'"/>
                                        <field name="image_height" invisible="message_type != 'image'"/>
                                    </group>
                                </group>
                                <group invisible="message_type != 'document'">
                                    <group string="Document Information">
                                        <field name="document_filename"/>
                                        <field name="caption" widget="text"/>
                                    </group>
                                </group>
                                <group invisible="message_type != 'audio'">
                                    <group string="Audio Information">
                                        <field name="audio_voice"/>
                                    </group>
                                </group>
                            </page>
                            
                            <page string="Location" name="location" invisible="message_type != 'location'">
                                <group>
                                    <group string="Location Details">
                                        <field name="location_name"/>
                                        <field name="location_address" widget="text"/>
                                        <field name="location_latitude"/>
                                        <field name="location_longitude"/>
                                    </group>
                                </group>
                            </page>
                            
                            <page string="Contacts" name="contacts" invisible="message_type != 'contacts'">
                                <group>
                                    <field name="contact_data" widget="text" nolabel="1" readonly="1"/>
                                </group>
                            </page>
                            
                            <page string="Interactive" name="interactive" invisible="message_type != 'interactive'">
                                <group>
                                    <field name="interactive_type"/>
                                    <field name="interactive_data" widget="text" nolabel="1" readonly="1"/>
                                </group>
                            </page>
                            
                            <page string="Template" name="template" invisible="message_type != 'template'">
                                <group>
                                    <group string="Template Information">
                                        <field name="template_name"/>
                                        <field name="template_language"/>
                                    </group>
                                    <group>
                                        <field name="template_params" widget="text" nolabel="1" readonly="1"/>
                                    </group>
                                </group>
                            </page>
                            
                            <page string="Context/Quote" name="context" invisible="not has_context">
                                <group>
                                    <group string="Quoted Message">
                                        <field name="has_context"/>
                                        <field name="context_message_id"/>
                                        <field name="context_from"/>
                                        <field name="context_referred_product_id" invisible="not context_referred_product_id"/>
                                    </group>
                                </group>
                            </page>
                            
                            <page string="Reaction" name="reaction" invisible="message_type != 'reaction'">
                                <group>
                                    <group string="Reaction Details">
                                        <field name="reaction_emoji"/>
                                        <field name="reaction_message_id"/>
                                    </group>
                                </group>
                            </page>
                            
                            <page string="Status &amp; Delivery" name="status_delivery">
                                <group>
                                    <group string="Message Status">
                                        <field name="message_status" widget="badge" 
                                               decoration-success="message_status == 'read'"
                                               decoration-info="message_status == 'delivered'"
                                               decoration-warning="message_status == 'sent'"
                                               decoration-danger="message_status == 'failed'"/>
                                        <field name="status_timestamp"/>
                                        <field name="status_recipient_id"/>
                                    </group>
                                    <group string="Error Information" invisible="message_status != 'failed'">
                                        <field name="status_error_code" invisible="message_status != 'failed'"/>
                                        <field name="status_error_title" invisible="message_status != 'failed'"/>
                                        <field name="status_error_message" widget="text" invisible="message_status != 'failed'"/>
                                    </group>
                                </group>
                                <group>
                                    <group string="Pricing">
                                        <field name="pricing_category"/>
                                        <field name="pricing_model"/>
                                    </group>
                                </group>
                            </page>
                            
                            <page string="Metadata" name="metadata">
                                <group>
                                    <group string="Business Account">
                                        <field name="business_account_id"/>
                                        <field name="phone_number_id"/>
                                        <field name="display_phone_number"/>
                                    </group>
                                    <group string="Message Info">
                                        <field name="message_id"/>
                                        <field name="timestamp_unix"/>
                                    </group>
                                </group>
                            </page>
                            
                            <page string="Raw Data" name="raw_data">
                                <group>
                                    <field name="raw_message_data" widget="text" nolabel="1" readonly="1"/>
                                </group>
                            </page>
                            
                            <page string="Error Info" name="error" invisible="status != 'error'">
                                <group>
                                    <field name="error_message" widget="text" nolabel="1" readonly="1"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- WhatsApp Root Menu -->
        <menuitem id="menu_whatsapp_root"
                  name="WhatsApp Light"
                  sequence="100"/>
        
        <!-- WhatsApp Messages Menu Item -->
        <menuitem id="menu_whatsapp_messages"
                  name="Messages"
                  action="action_whatsapp_message"
                  parent="menu_whatsapp_root"
                  sequence="10"/>
    </data>
</odoo>
