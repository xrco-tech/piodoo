<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- WhatsApp Template Preview Template -->
        <template id="whatsapp_template_preview" t-name="WhatsApp Template Preview">
            <div class="o_whatsapp_preview" style="max-width: 100%; overflow: hidden; padding-left: 12px; padding-right: 20px;">
                <div class="o_whatsapp_message" style="margin-top: 8px; margin-bottom: 4px; font-size: 14px; line-height: 1.2; float: left; word-break: break-word; color: #000; position: relative; background-color: #ffffff; border-radius: 7.5px; padding: 8px; max-width: 85%; box-shadow: 0 1px 0.5px rgba(0,0,0,0.13);">
                    <div class="o_whatsapp_message_core" style="position: relative;">
                        <!-- Header for media types -->
                        <div class="o_whatsapp_message_header" 
                             t-if="header_type and header_type != 'TEXT'"
                             style="background-color: rgba(0,0,0,0.05);">
                            <div style="display: block; background-color: #f0f0f0; padding: 16px; text-align: center; border-radius: 7.5px;">
                                <t t-if="header_type == 'IMAGE'">
                                    <i class="fa fa-image" style="font-size: 48px; color: #666;"/>
                                </t>
                                <t t-elif="header_type == 'VIDEO'">
                                    <i class="fa fa-video-camera" style="font-size: 48px; color: #666;"/>
                                </t>
                                <t t-elif="header_type == 'DOCUMENT'">
                                    <i class="fa fa-file" style="font-size: 48px; color: #666;"/>
                                </t>
                            </div>
                        </div>
                        
                        <!-- Header text -->
                        <div t-if="header_type == 'TEXT' and header_text" 
                             style="padding-left: 4px; padding-right: 4px; margin-top: 8px; white-space: normal; word-wrap: break-word; max-width: 100%; color: #111827; font-size: 14px; line-height: 1.35; font-weight: bold;">
                            <t t-raw="header_text"/>
                        </div>
                        
                        <!-- Message Body -->
                        <div class="o_whatsapp_message_body" 
                             style="padding-left: 4px; padding-right: 4px; padding-bottom: 20px; margin-top: 8px; white-space: normal; word-wrap: break-word; max-width: 100%; color: #111827; font-size: 14px; line-height: 1.35;">
                            <t t-if="body">
                                <t t-raw="body"/>
                            </t>
                            <t t-else="">
                                <em style="color: #999;">No body text</em>
                            </t>
                        </div>
                        
                        <!-- Footer -->
                        <div t-if="footer_text" 
                             style="padding-left: 4px; padding-right: 4px; padding-top: 8px; white-space: normal; word-wrap: break-word; max-width: 100%; color: #999; font-size: 12px; line-height: 1.35; border-top: 1px solid #e5e7eb; margin-top: 8px;">
                            <t t-raw="footer_text"/>
                        </div>
                        
                        <!-- Buttons -->
                        <div class="o_whatsapp_message_links" t-if="buttons and len(buttons) > 0" 
                             style="cursor: default; padding: 0; margin-top: 8px;">
                            <hr style="border: 0; height: 1px; background: #e5e7eb; margin: 0; position: relative; width: 100%;"/>
                            <t t-if="len(buttons) &lt;= 3">
                                <t t-foreach="buttons" t-as="button" t-key="button_index">
                                    <t t-set="btn_type" t-value="button.type"/>
                                    <t t-set="btn_text" t-value="button.text or button.name or ''"/>
                                    <span style="display: block; text-align: center; margin: 12px 0; font-size: 13px; color: #0b56d0; user-select: none;">
                                        <t t-if="btn_type == 'PHONE_NUMBER'">
                                            <i class="fa fa-phone" style="font-size: 20px;"/>
                                        </t>
                                        <t t-elif="btn_type == 'URL'">
                                            <i class="fa fa-external-link" style="font-size: 20px;"/>
                                        </t>
                                        <t t-elif="btn_type == 'FLOW'">
                                            <i class="fa fa-sitemap" style="font-size: 20px;"/>
                                        </t>
                                        <t t-else="">
                                            <i class="fa fa-reply" style="font-size: 20px;"/>
                                        </t>
                                        <t t-out="btn_text"/>
                                    </span>
                                    <hr t-if="button_index &lt; len(buttons) - 1" style="border: 0; height: 1px; background: #e5e7eb; margin: 0; position: relative; width: 100%;"/>
                                </t>
                            </t>
                            <t t-elif="len(buttons) &lt;= 10">
                                <span style="display: block; text-align: center; margin: 12px 0; font-size: 13px; color: #0b56d0; user-select: none;">
                                    <i class="fa fa-list-ul" style="font-size: 20px;"/> See all options
                                </span>
                            </t>
                        </div>
                    </div>
                </div>
            </div>
        </template>
        
        <!-- WhatsApp Template Search View -->
        <record id="view_whatsapp_template_search" model="ir.ui.view">
            <field name="name">whatsapp.template.search</field>
            <field name="model">whatsapp.template</field>
            <field name="arch" type="xml">
                <search string="Search WhatsApp Templates">
                    <field name="name" string="Template Name"/>
                    <field name="language"/>
                    <field name="body" string="Body"/>
                    <separator/>
                    <filter string="Pending" name="pending" domain="[('status', '=', 'PENDING')]"/>
                    <filter string="Approved" name="approved" domain="[('status', '=', 'APPROVED')]"/>
                    <filter string="Rejected" name="rejected" domain="[('status', '=', 'REJECTED')]"/>
                    <filter string="Paused" name="paused" domain="[('status', '=', 'PAUSED')]"/>
                    <separator/>
                    <filter string="Authentication" name="auth" domain="[('category', '=', 'AUTHENTICATION')]"/>
                    <filter string="Utility" name="utility" domain="[('category', '=', 'UTILITY')]"/>
                    <filter string="Marketing" name="marketing" domain="[('category', '=', 'MARKETING')]"/>
                    <separator/>
                    <filter string="High Quality" name="green" domain="[('quality_score', '=', 'GREEN')]"/>
                    <filter string="Medium Quality" name="yellow" domain="[('quality_score', '=', 'YELLOW')]"/>
                    <filter string="Low Quality" name="red" domain="[('quality_score', '=', 'RED')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Status" name="group_status" context="{'group_by': 'status'}"/>
                        <filter string="Category" name="group_category" context="{'group_by': 'category'}"/>
                        <filter string="Language" name="group_language" context="{'group_by': 'language'}"/>
                        <filter string="Quality" name="group_quality" context="{'group_by': 'quality_score'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- WhatsApp Template Action -->
        <record id="action_whatsapp_template" model="ir.actions.act_window">
            <field name="name">WhatsApp Templates</field>
            <field name="res_model">whatsapp.template</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="view_whatsapp_template_search"/>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No WhatsApp templates yet!
                </p>
                <p>
                    Create message templates to send business-initiated messages outside the 24-hour window.
                </p>
            </field>
        </record>

        <!-- WhatsApp Template Button List View -->
        <record id="view_whatsapp_template_button_tree" model="ir.ui.view">
            <field name="name">whatsapp.template.button.list</field>
            <field name="model">whatsapp.template.button</field>
            <field name="arch" type="xml">
                <list editable="bottom">
                    <field name="button_type"/>
                    <field name="text"/>
                    <field name="url" invisible="button_type != 'URL'"/>
                    <field name="phone_number" invisible="button_type != 'PHONE_NUMBER'"/>
                    <field name="flow_id" invisible="button_type != 'FLOW'"/>
                </list>
            </field>
        </record>

        <!-- WhatsApp Template List View -->
        <record id="view_whatsapp_template_tree" model="ir.ui.view">
            <field name="name">whatsapp.template.list</field>
            <field name="model">whatsapp.template</field>
            <field name="arch" type="xml">
                <list string="WhatsApp Templates" 
                      decoration-info="status == 'PENDING'"
                      decoration-success="status == 'APPROVED'"
                      decoration-warning="status == 'PAUSED'"
                      decoration-danger="status == 'REJECTED'">
                    <field name="name"/>
                    <field name="language"/>
                    <field name="category"/>
                    <field name="template_preview_html" widget="html" optional="show" string="Preview"/>
                    <field name="body" widget="text" optional="hide"/>
                    <field name="status" widget="badge"
                           decoration-info="status == 'PENDING'"
                           decoration-success="status == 'APPROVED'"
                           decoration-warning="status == 'PAUSED'"
                           decoration-danger="status == 'REJECTED'"/>
                    <field name="quality_score" widget="badge" optional="hide"
                           decoration-success="quality_score == 'GREEN'"
                           decoration-warning="quality_score == 'YELLOW'"
                           decoration-danger="quality_score == 'RED'"/>
                    <field name="usage_count" optional="hide"/>
                    <field name="last_used" optional="hide" widget="datetime"/>
                </list>
            </field>
        </record>

        <!-- WhatsApp Template Form View -->
        <record id="view_whatsapp_template_form" model="ir.ui.view">
            <field name="name">whatsapp.template.form</field>
            <field name="model">whatsapp.template</field>
            <field name="arch" type="xml">
                <form string="WhatsApp Template">
                    <header>
                        <button name="action_submit_to_meta" string="Submit to Meta" type="object"
                                class="oe_highlight" icon="fa-upload"
                                invisible="status == 'APPROVED' or template_id_meta"/>
                        <button name="action_fetch_from_meta" string="Sync from Meta" type="object"
                                class="btn-secondary" icon="fa-refresh"/>
                        <button name="action_send_template" string="Send Template" type="object"
                                class="oe_highlight" icon="fa-paper-plane"
                                invisible="status != 'APPROVED'"/>
                        <field name="status" widget="statusbar" statusbar_visible="PENDING,APPROVED,REJECTED"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" placeholder="template_name_lowercase"/>
                                <field name="language"/>
                                <field name="category"/>
                                <field name="template_id_meta" readonly="1"/>
                            </group>
                            <group>
                                <field name="status" readonly="1"/>
                                <field name="quality_score" readonly="1"/>
                                <field name="usage_count" readonly="1"/>
                                <field name="last_used" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Template Preview" name="preview">
                                <group>
                                    <field name="template_preview_html" widget="html" nolabel="1"/>
                                </group>
                            </page>
                            
                            <page string="Template Content" name="content">
                                <group>
                                    <group string="Header" invisible="not header_type">
                                        <field name="header_type"/>
                                        <field name="header_text" invisible="header_type != 'TEXT'"/>
                                        <field name="header_media_handle" invisible="header_type == 'TEXT' or not header_type"/>
                                    </group>
                                </group>
                                <group>
                                    <field name="body" widget="text" nolabel="1" required="1"
                                           placeholder="Enter template body with placeholders {{1}}, {{2}}, etc."/>
                                </group>
                                <group>
                                    <field name="footer" placeholder="Footer text (max 60 characters, no variables)"/>
                                </group>
                            </page>
                            
                            <page string="Buttons" name="buttons">
                                <field name="button_ids" nolabel="1" context="{'default_template_id': id}">
                                    <list>
                                        <field name="button_type"/>
                                        <field name="text"/>
                                        <field name="url" invisible="button_type != 'URL'"/>
                                        <field name="phone_number" invisible="button_type != 'PHONE_NUMBER'"/>
                                        <field name="flow_id" invisible="button_type != 'FLOW'"/>
                                    </list>
                                    <form>
                                        <sheet>
                                            <group>
                                                <field name="button_type"/>
                                                <field name="text"/>
                                                <field name="url" invisible="button_type != 'URL'"/>
                                                <field name="phone_number" invisible="button_type != 'PHONE_NUMBER'"/>
                                            </group>
                                            <group string="Flow Settings" invisible="button_type != 'FLOW'">
                                                <field name="flow_id" 
                                                       domain="[('status', '=', 'PUBLISHED')]"
                                                       options="{'no_create': True}"/>
                                                <field name="flow_action" invisible="not flow_id"/>
                                                <field name="navigate_screen" 
                                                       invisible="not flow_id or flow_action != 'navigate'"
                                                       placeholder="Leave empty to use flow's first page"/>
                                            </group>
                                        </sheet>
                                    </form>
                                </field>
                            </page>
                            
                            <page string="Flow Integration" name="flow">
                                <group>
                                    <field name="use_flow"/>
                                    <field name="flow_id" invisible="not use_flow"
                                           domain="[('status', '=', 'PUBLISHED')]"
                                           options="{'no_create': True}"/>
                                </group>
                                <group string="Flow Information" invisible="not flow_id">
                                    <group>
                                        <field name="flow_id" readonly="1"/>
                                    </group>
                                </group>
                            </page>
                            
                            <page string="Meta Information" name="meta">
                                <group>
                                    <group string="Template Status">
                                        <field name="template_id_meta"/>
                                        <field name="status"/>
                                        <field name="quality_score"/>
                                        <field name="rejection_reason" widget="text" invisible="status != 'REJECTED'"/>
                                    </group>
                                </group>
                            </page>
                            
                            <page string="Additional Info" name="additional">
                                <group>
                                    <field name="description" widget="text" nolabel="1" placeholder="Internal description"/>
                                    <field name="example_data" widget="text" nolabel="1" placeholder="Example JSON data for template parameters"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- WhatsApp Template Send Wizard Form View -->
        <record id="view_whatsapp_template_send_wizard_form" model="ir.ui.view">
            <field name="name">whatsapp.template.send.wizard.form</field>
            <field name="model">whatsapp.template.send.wizard</field>
            <field name="arch" type="xml">
                <form string="Send Template Message">
                    <group>
                        <group>
                            <field name="template_id" readonly="1"/>
                            <field name="phone_number_id" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="recipient_phone" placeholder="27683264051" required="1"/>
                    </group>
                    <group string="Template Parameters" invisible="not parameter_ids">
                        <field name="parameter_ids" nolabel="1" context="{'default_wizard_id': id}">
                            <list>
                                <field name="sequence" invisible="1"/>
                                <field name="placeholder" readonly="1"/>
                                <field name="value"/>
                            </list>
                            <form>
                                <sheet>
                                    <group>
                                        <field name="sequence" invisible="1"/>
                                        <field name="placeholder" readonly="1"/>
                                        <field name="value" required="1" placeholder="Enter value for this parameter"/>
                                    </group>
                                </sheet>
                            </form>
                        </field>
                    </group>
                    <footer>
                        <button name="action_send_template" string="Send Template" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- WhatsApp Template Send Wizard Action -->
        <record id="action_whatsapp_template_send_wizard" model="ir.actions.act_window">
            <field name="name">Send Template Message</field>
            <field name="res_model">whatsapp.template.send.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <!-- WhatsApp Templates Menu Item -->
        <menuitem id="menu_whatsapp_templates"
                  name="Templates"
                  action="action_whatsapp_template"
                  parent="menu_whatsapp_root"
                  sequence="20"/>
    </data>
</odoo>
