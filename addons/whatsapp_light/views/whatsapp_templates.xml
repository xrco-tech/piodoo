<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="oauth_success" name="WhatsApp OAuth Success">
        <t t-call="web.layout">
            <div class="container mt-5">
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-body text-center">
                                <h2 class="card-title text-success">
                                    <i class="fa fa-check-circle"/> Authentication Successful
                                </h2>
                                <p class="card-text">
                                    <t t-esc="message"/>
                                </p>
                                <p class="text-muted">
                                    You can now close this window and return to Odoo.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="oauth_error" name="WhatsApp OAuth Error">
        <t t-call="web.layout">
            <div class="container mt-5">
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-body text-center">
                                <h2 class="card-title text-danger">
                                    <i class="fa fa-exclamation-circle"/> Authentication Failed
                                </h2>
                                <p class="card-text">
                                    <strong>Error:</strong> <t t-esc="error"/>
                                </p>
                                <p class="card-text text-muted">
                                    <t t-esc="error_description"/>
                                </p>
                                <p class="text-muted">
                                    Please try again or contact your administrator.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="config_error" name="WhatsApp Configuration Error">
        <t t-call="web.layout">
            <div class="container mt-5">
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-body text-center">
                                <h2 class="card-title text-warning">
                                    <i class="fa fa-exclamation-triangle"/> Configuration Error
                                </h2>
                                <p class="card-text">
                                    <t t-esc="message"/>
                                </p>
                                <p class="text-muted">
                                    Please configure WhatsApp settings in Odoo Settings before attempting authentication.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
