<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- ============================================================
             APP CATEGORY
             Makes the group appear as an app-level group in Settings â†’
             Users & Companies (like Inventory / Purchase).
        ============================================================ -->
        <record id="module_category_sales_force" model="ir.module.category">
            <field name="name">Sales Force</field>
            <field name="sequence">100</field>
        </record>

        <!-- ============================================================
             SINGLE USER GROUP
             All Sales Force users receive full access.
        ============================================================ -->
        <record id="group_sales_force_user" model="res.groups">
            <field name="name">Administrator</field>
            <field name="category_id" ref="module_category_sales_force"/>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
        </record>

    </data>
</odoo>
