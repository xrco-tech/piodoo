<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- ============================================================
             BASE SALES FORCE GROUPS
             Replaces hr_recruitment.group_hr_recruitment_user/manager
             which are removed as a dependency.
        ============================================================ -->
        <record id="group_sales_force_user" model="res.groups">
            <field name="name">Sales Force User</field>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
        </record>

        <record id="group_sales_force_manager" model="res.groups">
            <field name="name">Sales Force Manager</field>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
        </record>

        <!-- ============================================================
             PROMOTIONS
             (from botle_buhle_custom)
        ============================================================ -->
        <record id="group_promotions" model="res.groups">
            <field name="name">Promotions</field>
        </record>

        <!-- ============================================================
             GENEALOGY OPERATION GROUPS
             (from bbb_sales_force_genealogy)
        ============================================================ -->
        <record id="group_sales_force_movements" model="res.groups">
            <field name="name">Sales Force Genealogy - Move Consultants</field>
        </record>

        <record id="group_sales_force_promotions" model="res.groups">
            <field name="name">Sales Force Genealogy - Promote and Demote</field>
        </record>

        <record id="group_sales_force_blacklisting" model="res.groups">
            <field name="name">Sales Force Genealogy - Blacklist and Suspend</field>
        </record>

        <record id="group_sales_force_consultant_create" model="res.groups">
            <field name="name">Sales Force Genealogy - Create Consultant</field>
        </record>

        <record id="group_sales_force_interview_decline_reasons" model="res.groups">
            <field name="name">Sales Force Genealogy - Interview Decline Reasons</field>
        </record>

        <!-- ============================================================
             PAY-IN SHEETS GROUPS
             (from bb_payin)
        ============================================================ -->
        <record id="group_voip_access" model="res.groups">
            <field name="name">VoIP Group</field>
        </record>

        <record id="group_payin" model="res.groups">
            <field name="name">Pay-In Sheets</field>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
        </record>

        <record id="group_payin_admin" model="res.groups">
            <field name="name">Pay-In Sheets Admin</field>
        </record>

        <record id="group_payin_edit" model="res.groups">
            <field name="name">Pay-In Sheets / Edit After Capture</field>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
        </record>

        <record id="group_received_date_edit" model="res.groups">
            <field name="name">Pay-In Sheets / Update Received Date</field>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
        </record>

        <record id="group_verify" model="res.groups">
            <field name="name">Pay-In Sheets / Verify Pay-In</field>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
        </record>

        <record id="group_lock_unlock" model="res.groups">
            <field name="name">Pay-In Sheets / Lock and Unlock Pay-In</field>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
        </record>

        <!-- ============================================================
             INTEGRATION GROUPS
             (from partner_compuscan, partner_consumerview)
        ============================================================ -->
        <record id="group_compuscan_operator" model="res.groups">
            <field name="name">Compuscan Operator</field>
        </record>

        <record id="group_consumerview_operator" model="res.groups">
            <field name="name">ConsumerView Operator</field>
        </record>

    </data>
</odoo>
