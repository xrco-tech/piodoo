<odoo>

    <record id="potential_consultants_promote_view" model="ir.ui.view">
        <field name="name">Activate Potential Consultants</field>
        <field name="model">potential_consultant.promotion.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                  <group>
                      <field name="activation_reason" string="Activation Reason" options="{'no_create': False}"/>
                  </group>
                    <footer>
                        <button type="object" name="promote_potential_consultant"  string="Activate" class="oe_highlight"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="consultants_promote_view" model="ir.ui.view">
        <field name="name">Promote Consultants</field>
        <field name="model">consultant.promotion.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                  <group>
                      <field name="promoter_id" required="True" options="{'no_create': True}" domain="[('genealogy', 'in', ['manager', 'distributor']), ('sales_force', '=', True)]"/>
                      <field name="promotion_date" required="True" options="{'no_create': False}"/>
                      <field name="promotion_effective_date" required="True" options="{'no_create': False}"/>
                      <field name="promotion_reason" options="{'no_create': False}"/>
                  </group>
                    <footer>
                        <button type="object" name="promote_consultant"  string="Promote" class="oe_highlight"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

