<?xml version="1.0" encoding="utf-8"?>
<!-- Source: bbb_sales_force_genealogy/wizards/consultant_move_wizard_view.xml -->
<odoo>
    <record id="consultant_move_view" model="ir.ui.view">
        <field name="name">consultant.move.wizard.form</field>
        <field name="model">consultant.move.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                  <group>
                      <field name="move_manager_id" required="True" options="{'no_create': True}" domain="[('genealogy', 'in', ['manager', 'prospective_distributor', 'distributor'])]"/>
                      <field name="move_date" required="True" options="{'no_create': False}"/>
                      <field name="move_reason" options="{'no_create': False}"/>
                  </group>
                    <footer>
                        <button type="object" name="move_consultant"  string="Move" class="oe_highlight"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="manager_move_view" model="ir.ui.view">
        <field name="name">manager.move.wizard.form</field>
        <field name="model">manager.move.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                  <group>
                      <field name="move_distributor_id" required="True" options="{'no_create': True}" domain="[('genealogy', '=', 'distributor')]"/>
                      <field name="move_date" required="True" options="{'no_create': False}"/>
                      <field name="move_reason" options="{'no_create': False}"/>
                  </group>
                    <footer>
                        <button type="object" name="move_manager"  string="Move" class="oe_highlight"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
